<!--index.wxml-->
<view class="container">
  <!-- header -->
  <view class='city-sel'>
    <view class='left-city'>
      <view class='iconfont iconweizhi'></view>
      <text>{{cityNametext}}</text>
    </view>
    <view class='right-check' bindtap='changeCity'>
      <text>切换城市</text>
      <view class='right-icon iconfont iconjiantou'></view>
    </view>
  </view>
  <!-- banner -->
  <view class='dot'>
    <view wx:for="{{imgUrls}}" wx:key="{{index}}" class="{{swiperCurrent==index?'active':''}}" bindtap='changeImg' data-index='{{index}}'></view>
  </view>
  <swiper autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{swiperCurrent}}" bindchange="swiperChange">
    <block wx:for="{{imgUrls}}" wx:key='{{index}}'>
      <swiper-item>
        <image src="{{item.pictureurl}}" class="slide-image" width="355" height="150" />
      </swiper-item>
    </block>
  </swiper>

  <!-- 功能 -->
  <view class='gongneng-box'>
    <view class='goneneng'>
      <view class='gn1'>
        <image data-url='../recommend/recommend' bindtap='pageTobind' src='../../images/recommend.png'></image>
        <text>我要推荐</text>
      </view>
      <view class='gn2'>
        <image data-url='../clients/client' bindtap='pageTobind' src='../../images/client.png'></image>
        <text>我的客户</text>
      </view>
      <view class='gn3'>
        <image data-url='../coupon/coupon' bindtap='pageTobind' src='../../images/discounts.png'></image>
        <text>优惠券</text>
      </view>
    </view>
  </view>

  <!-- 楼盘信息标题 -->
  <view class='hours'>
    <text>楼盘信息</text>
  </view>
  <!-- 楼盘详情 -->
  <view class='hours-list' bindtap='goInformation' data-project_id='{{item.projectid_id}}' data-imgurl='{{item.pictureurl}}' wx:for='{{buildinfolist}}' wx:key='index'>
    <view class='img'>
      <image src='{{item.pictureurl}}'></image>
    </view>
    <view class='hours-info'>
      <view class='left-info'>
        <view class='hours-name'>
          <text>{{item.projectname_cswx}}</text>
          <view class='youhui'>
            <!-- <text class='t1'>9.8折</text>
            <text class='t2'>领</text> -->
            <text class='t3'>{{item.couponname}}</text>
          </view>
        </view>
        <view class='tag'>
          <text wx:for='{{buildinfotaglist[index]}}' wx:key='{{index}}'>{{item}}</text>
        </view>
      </view>
      <view class='right-info'>
        <view class='price'>主力均价：
          <text>{{item.mainprice}}</text>
          <text>元/㎡</text>
        </view>
        <view class='hours-address'>
          <text class='hours-address-icon iconfont iconweizhi'></text>
          <text>{{item.city}}</text>
        </view>
      </view>
    </view>
  </view>

</view>