<!-- 客户列表页 -->
<view class='clients'>
  <!-- 人数显示 -->
  <view class='top'>
    <view>
      <text>已推荐客户</text>
      <view>20
        <text>人</text>
      </view>
    </view>
    <view>
      <text>已到访客户</text>
      <view>5
        <text>人</text>
      </view>
    </view>
    <view>
      <text>已获得推荐佣金</text>
      <view>5
        <text>万元</text>
      </view>
    </view>
  </view>
  <!-- 城市搜索 -->
  <view class='city-search'>
    <view class='search'>
      <i-panel>
        <i-input value="{{ value5 }}" placeholder="请输入姓名或手机号" />
      </i-panel>
    </view>
    <view class='search-icon'>
      <image src='../../images/search.png'></image>
    </view>
    <view class='screen' bindtap='toggleRight'>
      <text>筛选</text>
    </view>
  </view>
  <!-- 客户列表 -->
  <view class='client'>
    <view class='cilent-info'>
      <view class='name'>
        <text>张生</text>
        <text>13988889990</text>
      </view>
      <view>
        <text>深圳中海天钻</text>
      </view>
    </view>
    <view class='step'>
      <view class='step-view'>
        <view class='dot'>
          <image src='../../images/duihao.png'></image>
        </view>
        <view class='striping connect1'></view>
        <view class='dot connect1'>
          <image src='../../images/duihao.png'></image>
        </view>
        <view class='striping connect2'></view>
        <view class='dot connect2'>
          <image src='../../images/duihao.png'></image>
        </view>
        <view class='striping connect3'></view>
        <view class='dot connect3'>
          <image src='../../images/duihao.png'></image>
        </view>
      </view>
      <view class='step-tip'>
        <text>推荐</text>
        <text>来访</text>
        <text>认购</text>
        <text>成交</text>
      </view>
      <view class='step-time'>
        <text>2019.01.12</text>
        <text>2019.02.10</text>
        <text>2019.03.11</text>
      </view>
    </view>
    <view class='luck'>
      <view class='icon'>
        <image src='../../images/xingzhuang.png'></image>
      </view>
      <text>恭喜您，获得推荐佣金5000元</text>
    </view>
  </view>
  <!-- 悬浮窗 -->
  <view class='floating'>
    <view>佣金规则</view>
    <view>
      <view class='icon'>
        <image src='../../images/tuijian.png'></image>
      </view>
      <text>推荐</text>
    </view>
  </view>
</view>
 <!-- 抽屉 -->
<view class='drawer' wx:if='{{showRight}}'>
  <view class='shade' bindtap='hideDrawer'></view>
  <view class='content'>
    <view class='city'>
      <view class='title'>城市</view>
      <view class='city-list'>
        <view bindtap='selTag'>全部</view>
        <view>深圳</view>
        <view>东莞</view>
      </view>
    </view>

    <view class='project'>
      <view class='title'>项目</view>
      <view>
        <text>深圳中海天钻项目</text>
        <image src='../../images/godown.png'></image>
      </view>
    </view>

    <view class='time'>
      <view class='title'>时间区间</view>
      <view>
        <view>
          <text>开始时间</text>
          <image src='../../images/godown.png'></image>
        </view>
        <view>
          <text>结束时间</text>
          <image src='../../images/godown.png'></image>
        </view>
      </view>
    </view>

    <view class='plan'>
      <view class='title'>进度</view>
      <view>
        <text>全部</text>
        <text>推荐</text>
        <text>来电</text>
        <text>签约</text>
        <text>认购</text>
      </view>
    </view>

    <view class='tabbar'>
      <view class='reset'>重置</view>
      <view class='ok'>确认</view>
    </view>
  </view>

</view>





