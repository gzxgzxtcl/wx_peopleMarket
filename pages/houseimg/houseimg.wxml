<!-- 户型图页面 -->
<view class='house-img-page'>
  <view class='house-img'>
    <image src='https://images.unsplash.com/photo-1551334787-21e6bd3ab135?w=640' bindtap='getBigImg'></image>
  </view>
  <view class='tabbar'>
    <view wx:for='{{selArr[selIndex]}}' wx:key='{{index}}' class='sel1' bindtap='selImg' data-num='{{index}}'>
      <view class='icon' wx:if='{{selItem===index}}'><image src='../../images/top.png'></image></view>
      <view class="txt {{selItem===index?'active':''}}">{{item}}(1)</view>
    </view>
  </view>
</view>
