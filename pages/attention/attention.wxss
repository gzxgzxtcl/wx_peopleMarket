.my-attention .hours-list .bottom-info .hours-address {
  font-family: 'PingFangTC-Light';
  font-size: 20rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.my-attention .hours-list .bottom-info .hours-address .icon {
  width: 14rpx;
  height: 18rpx;
  margin-bottom: 7rpx;
}

.my-attention .hours-list .bottom-info .hours-address .icon image {
  width: 100%;
  height: 100%;
}

.my-attention .hours-list .bottom-info .hours-address text{
  margin-left: 5rpx;
}

/* 无关注信息提示 */

.null-tip {
  width: 100%;
  text-align: center;
  margin-top: 300rpx;
  font-family: 'PingFang-SC-Medium';
  font-size: 28rpx;
  color: #333;
}
