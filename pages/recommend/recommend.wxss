/* pages/recommend/recommend.wxss */

.list li {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: block;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 0 35rpx 0 50rpx;
  font-size: 30rpx;
  color: #111;
}

.title {
  float: left;
  width: 200rpx;
  position: relative;
}
.phone-header{
  float: left;
  width: 80rpx;
}
.required::before {
  content: '*';
  color: #fb1414;
  position: absolute;
  left: -25rpx;
  top: 4rpx;
}

.inp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
  padding-left: 20rpx;
  font-size: 28rpx;
}

.inp input {
  width: 100%;
}

.textsty {
  width: 100%;
  height: 100%;
  line-height: 50rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
}

.bindSub {
  height: 80rpx;
  font-size: 30rpx;
  margin: 40rpx 40rpx 0;
  background-color: #20a0ff;
  color: #fff;
}

.iconSty {
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 50%;
}

.genderSty {
  width: 200rpx;
  height: 100%;
  background: none;
  /* display: inline-block; */
  padding: 0;
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
}

.genderSty::after {
  border: none;
}



/* 新增弹窗--》获取用户信息 */
.bgpack {
  display: flex;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 30rpx;
  z-index: 10;
}

.bgpack .wicket {
  width: 560rpx;
  height: 334rpx;
  box-sizing: border-box;
  margin: auto;
  padding: 40rpx 0rpx 0rpx 0rpx;
  border-radius: 6rpx;
  background-color: #F8F8F8;
}

.bgpack button {
  display: inline-block;
  width: 50%;
  height: 100rpx;
  background: none;
  border-radius:0;
  font-size: 36rpx;
}

.bgpack button::after {
  border: none;
}
