/* pages/recommend/recommend.wxss */

.list li {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: block;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 0 35rpx 0 50rpx;
  font-size: 30rpx;
  color: #111;
}

.title {
  float: left;
  width: 200rpx;
  position: relative;
}
.phone-header{
  float: left;
  width: 80rpx;
}
.required::before {
  content: '*';
  color: #fb1414;
  position: absolute;
  left: -25rpx;
  top: 4rpx;
}

.inp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
  padding-left: 20rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.inp input {
  width: 100%;
}

.textsty {
  width: 100%;
  height: 100%;
  line-height: 50rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
}

.bindSub {
  height: 80rpx;
  font-size: 30rpx;
  margin: 40rpx 40rpx 0;
  background-color: #20a0ff;
  color: #fff;
}

.iconSty {
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 50%;
}

.genderSty {
  width: 200rpx;
  height: 100%;
  background: none;
  /* display: inline-block; */
  padding: 0;
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
}

.genderSty::after {
  border: none;
}



/* 新增弹窗--》获取用户信息 */
.bgpack {
  display: flex;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  font-size: 30rpx;
  z-index: 10;
}

.bgpack .wicket {
  width: 560rpx;
  height: 334rpx;
  box-sizing: border-box;
  margin: auto;
  padding: 40rpx 0rpx 0rpx 0rpx;
  border-radius: 6rpx;
  background: #F8F8F8;
}

.bgpack button {
  display: inline-block;
  width: 50%;
  height: 100rpx;
  background: none;
  border-radius:0;
  font-size: 36rpx;
}

.bgpack button::after {
  border: none;
}

.place-sel{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #B4B9CB;
}




/* picker样式 */
.picker-view{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 30;
}
.picker-view .content{
  width: 100%;
  /* height: 580rpx; */
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  background: #ffffff;
}
.picker-view .content .top{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #dddddd;
  font-size: 34rpx;
  font-family: 'PingFangSC-Regular';
  color:#20A0FF;
  padding: 0 30rpx;
}
.picker-view .content .top text{
  width: 110rpx;
}
.picker-view .content .top text:first-child{
  text-align: left;
}
.picker-view .content .top text:last-child{
  text-align: right;
}
.picker-view .content .bottom{
  height: 500rpx;
  font-size: 30rpx;
  font-family: 'PingFangSC-Regular';
  color: #333333;
  overflow: scroll;
}
.picker-view .content .bottom .list{
  height: 100rpx;
  padding: 0 51rpx 0 40rpx;
  border-bottom: 2rpx solid #dddddd;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.picker-view .content .bottom .list image{
  width: 51rpx;
  height: 37rpx;
}

/* 推荐成功弹窗 */

.back-box{
  padding-top: 40rpx;
  padding-left: 80rpx;
  padding-right: 40rpx;
}
.back-box>view{
  display: flex;
  margin-bottom:50rpx;
}
.back-box .success-list{
  /* height: 62rpx; */
}

.back-box .icon_left{
  width: 44rpx;
  height: 44rpx;
  margin-right: 32rpx;
}
.back-box .icon_left image{
  width: 100%;
  height: 100%;
}
.back-box .tip_right{
  height: 88%;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
}
.back-box .tip_right view{
  text-align: left;
}
.back-box .tip_right view:first-child{
  font-family: "PingFangSC-Regular";
  font-size: 30rpx;
  color: #000000;
}
.back-box .tip_right view:last-child{
  font-family: "PingFangSC-Regular";
  font-size: 30rpx;
  color: #888888;
}

.i-modal-body{
  max-height: 700rpx !important;
}