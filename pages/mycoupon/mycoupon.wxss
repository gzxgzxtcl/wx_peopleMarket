/* pages/mycoupon/mycoupon.wxss */

.mycoupon {
  margin-bottom: 100rpx;
}

.mycoupon .condition {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-top: 2rpx solid #eee;
  box-shadow: 0 0 2px 0 rgba(0, 0, 0, 0.20);
  font-size: 30rpx;
  color: #333;
  font-family: 'PingFang-SC-Medium';
  position: fixed;
  top: 0;
  left: 0;
}

.mycoupon .condition text {
  display: block;
  height: 100%;
  line-height: 100rpx;
}

.mycoupon .condition text:first-child {
  margin-left: 128rpx;
  margin-right: 110rpx;
}

.mycoupon .condition .is-sel {
  color: #20a0ff;
}

.mycoupon .condition text:last-child {
  margin-left: 110rpx;
}

/* 优惠券样式 */

.coupons-list {
  margin-top: 140rpx;
}

.coupon-item {
  display: flex;
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 670rpx;
  height: 200rpx;
  flex-wrap: wrap;
}

.coupon-item image {
  width: 100%;
  height: 100%;
}

.coupon-item .info {
  width: 100%;
  height: 100%;
  margin-top: -200rpx;
  display: flex;
  flex-wrap: wrap;
}

.coupon-item .info .num {
  width: 200rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 84rpx;
  font-family: 'DINCondensed-Bold';
  color: #fff;
  padding-bottom: 50rpx;
}

.coupon-item .info .num text:first-child {
  display: flex;
  margin-left: 5rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
}

.coupon-item .info .explain {
  width: 410rpx;
  padding-left: 36rpx;
  display: flex;
  flex-direction: column;
}

.coupon-item .info .explain .top {
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 42rpx;
}

.coupon-item .info .explain .top>view {
  display: block;
  color: #333;
  font-size: 30rpx;
  font-family: 'PingFang-SC-Medium';
  margin-right: 20rpx;
}

/* 未使用标签 */

.coupon-item .info .explain .top>text {
  display: block;
  text-align: center;
  line-height: 28rpx;
  height: 28rpx;
  width: 68rpx;
  font-size: 18rpx;
  font-family: 'PingFang-SC-Medium';
  color: #fff;
  background: #20a0ff;
  border-radius: 4rpx;
}

/* 已使用标签 */

.coupon-item .info .explain .top .isUsed {
  display: block;
  text-align: center;
  line-height: 28rpx;
  height: 28rpx;
  width: 68rpx;
  font-size: 18rpx;
  font-family: 'PingFang-SC-Medium';
  color: #fff;
  background: #ccc;
  border-radius: 4rpx;
}

/* 已过期标签 */

.coupon-item .info .explain .top .isOldUsed {
  display: block;
  text-align: center;
  line-height: 28rpx;
  height: 28rpx;
  width: 68rpx;
  font-size: 18rpx;
  font-family: 'PingFang-SC-Medium';
  color: #fff;
  background: #ccc;
  border-radius: 4rpx;
}

.coupon-item .info .explain .top .isOldUsedName {
  color: #c1c1c1;
}

.coupon-item .info .explain .bottom {
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  color: #8d91a2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.coupon-item .info .explain .bottom>view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-item .info .explain .isOldUsedBottom {
  height: 76rpx;
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  color: #c1c1c1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
