/* pages/mycoupon/mycoupon.wxss */

.mycoupon{
  margin-bottom: 100rpx;
}
.mycoupon .condition{
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-top: 2rpx solid #eeeeee;
  box-shadow: 0 0 2px 0 rgba(0,0,0,0.20);
  font-size: 30rpx;
  color: #333333;
  font-family: 'PingFang-SC-Medium';
}
.mycoupon .condition text{
  display:block;
  height: 100%;
  line-height: 100rpx;
}
.mycoupon .condition text:first-child{
    margin-left: 128rpx;
    margin-right: 110rpx;
}
.mycoupon .condition .is-sel{
  color: #20A0FF;
}
.mycoupon .condition text:last-child{
    margin-left: 110rpx;
}

/* 优惠券样式 */
.coupon-item{
  display: flex;
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 670rpx;
  height: 200rpx;
  flex-wrap: wrap;
}
.coupon-item image{
  width: 100%;
  height: 100%;
}
.coupon-item .info{
  width: 100%;
  height: 100%;
  margin-top: -200rpx;
  display: flex;
  flex-wrap: wrap
}
.coupon-item .info .num{
  width: 200rpx;
  height: 156rpx;
  display: flex;
  /* align-items: center; */
  justify-content: center;
  font-size: 66rpx;
  font-family: 'DINCondensed-Bold';
  color: #ffffff;
}
.coupon-item .info .num text:first-child{
  display: flex;
  width: 66rpx;
  height: 84rpx;
  margin-top: 60rpx;
}
.coupon-item .info .num text:last-child{
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  margin-top: 104rpx;
  margin-left: 20rpx;
}
.coupon-item .info .explain{
  width: 374rpx;
  padding-left: 36rpx;
  padding-right: 40rpx;
}
.coupon-item .info .explain .top{
  height: 42rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 42rpx;
}
.coupon-item .info .explain .top>view{
  display: flex;
  width: 222rpx;
  justify-content: space-around;
  color: #333333;
  font-size: 30rpx;
  font-family: 'PingFang-SC-Medium';
  margin-right: 20rpx;
}
.coupon-item .info .explain .top>text{
  display: block;
  text-align: center;
  line-height: 28rpx;
  height: 28rpx;
  width: 68rpx;
  font-size: 18rpx;
  font-family: 'PingFang-SC-Medium';
  color: #ffffff;
  background: #20A0FF;
  border-radius: 4rpx;
}
.coupon-item .info .explain .bottom{
  height: 76rpx;
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  color: #8D91A2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}