/* pages/coupon /coupon.wxss */

page {
  background: #fff;
}

.coupon {
  margin-bottom: 100rpx;
  border-top: 2rpx solid #eee;
}

/* 优惠券样式 */

.coupon-item {
  display: flex;
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 670rpx;
  height: 200rpx;
  flex-wrap: wrap;
}

.coupon-item image {
  width: 100%;
  height: 100%;
}

.coupon-item .info {
  width: 100%;
  height: 100%;
  margin-top: -200rpx;
  display: flex;
  flex-wrap: wrap;
}

.coupon-item .info .num {

  width: 200rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 84rpx;
  font-family: 'DINCondensed-Bold';
  color: #fff;
  padding-bottom: 50rpx;
}

.coupon-item .info .num text:first-child {
  display: flex;
  margin-left: 5rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
}


.coupon-item .info .explain {
  width: 414rpx;
  height: 100%;
  padding-left: 36rpx;
  /* padding-right: 40rpx; */
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
}

.coupon-item .info .explain .top {
  /* height: 42rpx; */
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  justify-content: space-between;
  margin-bottom: 42rpx;
}

.coupon-item .info .explain .top>view {
  display: flex;
  /* width: 222rpx; */
  justify-content: space-around;
  font-family: PingFang-SC-Medium;
  font-size: 15px;
  color: #333333;
}

.coupon-item .info .explain .top>text {
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  color: #20a0ff;
  /* margin-right: 40rpx; */
}

.coupon-item .info .explain .bottom {
  /* height: 76rpx; */
  font-size: 24rpx;
  font-family: 'PingFang-SC-Medium';
  color: #8d91a2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.coupon-item .info .explain .bottom>view{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}



/* 新增弹窗--》获取用户信息 */
.bgpack {
  display: flex;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  font-size: 30rpx;
  z-index: 10;
}

.bgpack .wicket {
  width: 560rpx;
  height: 334rpx;
  box-sizing: border-box;
  margin: auto;
  padding: 40rpx 0rpx 0rpx 0rpx;
  border-radius: 6rpx;
  background: #F8F8F8;
}

.bgpack button {
  display: inline-block;
  width: 50%;
  height: 100rpx;
  background: none;
  border-radius:0;
  font-size: 36rpx;
}

.bgpack button::after {
  border: none;
}
