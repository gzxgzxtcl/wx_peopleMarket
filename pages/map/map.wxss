/* pages/map/map.wxss */

page {
  width: 100%;
  height: 930rpx;
}
.map-box{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 30;
}
map{
  width: 100%;
  height: 100%;
}
.bottom .info{
  height: 170rpx;
  background: #ffffff;
  border-top: 2rpx solid #dddddd;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 30rpx 40rpx;
  z-index: 60;
}
.bottom .info .left{
  width: 75%;
  height: 100%;
}
.bottom .info .left .name{
  font-size: 50rpx;
  color: #000000;
  font-family: "PingFang-SC-Medium";
}
.bottom .info .left .address{
  font-size: 32rpx;
  color: #333333;
  font-family: "PingFang-SC-Medium";
  display: flex;
  flex-wrap: wrap;
}

.bottom .right{
  width: 154rpx;
  height: 154rpx;
}
.bottom .right image{
  width: 100%;
  height: 100%;
}


/* 选择地图/查看路线 */
.map-picker{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 90;
}
.map-picker .shadow{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5)
}
.sel-picker{
  width: 100%;
  background: #dddddd;
  position: fixed;
  bottom: 0;
  left: 0;
}
.sel-picker .show-line{
  margin-bottom: 10rpx;
}
.sel-picker .show-line,.sel-picker .cancel{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  text-align: center;
  background: #ffffff;
}
.sel-picker .sel-map{
  margin-bottom: 10rpx;
  background: #ffffff;
}
.sel-picker .sel-map view{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  text-align: center;
  border-bottom: 2rpx solid #cccccc;
}
