page{
  height: 100%;
  width: 100%;
}
.btn-box{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99999;
  border: none;
}
.btn-box button{
  width: 50%;
  height: 100%;
  border: none;
  background: #ffffff;
  opacity: 0.9;
  color: #000000;
  float: left;
  border-radius: 0;
}
.btn-box button:first-child{
  border-right: 2rpx solid #dddddd;
}
