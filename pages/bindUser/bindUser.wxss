/* pages/bindUser/bindUser.wxss */

.bindList li {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: block;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 0 35rpx 0 40rpx;
  font-size: 30rpx;
  color: #111;
}

.title {
  float: left;
}

.inp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
}

.inp input {
  width: 100%;
  text-align: right;
}

.phcolor {
  color: #b2b2b2;
}

.bindSub {
  height: 80rpx;
  font-size: 30rpx;
  margin: 200rpx 40rpx 0;
  background-color: #20a0ff;
  color: #fff;
}

.amendSub {
  height: 80rpx;
  font-size: 30rpx;
  margin: 200rpx 40rpx 0;
  background-color: #fff;
  color: #333;
}

.noteCode {
  display: block;
  width: 150rpx;
  position: absolute;
  right: 35rpx;
  top: 0;
  color: #20a0ff;
  text-align: center;
}

.modalClass {
  top: -200rpx !important;
}

.inpText {
  display: inline-block;
  width: 40rpx;
  margin: 0 10rpx;
}

.iconSty {
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 50%;
}

.genderSty {
  width: 200rpx;
  background: none;
  display: inline-block;
  padding: 0;
  text-align: right;
}

.genderSty::after {
  border: none;
}
