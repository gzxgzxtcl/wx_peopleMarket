<!-- 户型列表页 -->
<view class='house-type'>
  <view class='top-sel' >
    <view bindtap='changeHouse' data-index="{{0}}" class="{{selIndex===0?'active':''}}">
      <text>全部({{hourses.length}})</text>
      <view></view>
    </view>
    <view bindtap='changeHouse' data-index="{{1}}" class="{{selIndex===1?'active':''}}">
      <text>两室(1)</text>
      <view></view>
    </view>
    <view bindtap='changeHouse' data-index="{{2}}" class="{{selIndex===2?'active':''}}">
      <text>三室(1)</text>
      <view></view>
    </view>
  </view>
  <!-- 户型信息 -->
  <view class='house-item' wx:for='{{hourses}}' wx:key='{{index}}'>
    <view class='huxing'>
      <view class='tip'>
        <text>{{item.caption}}</text>
      </view>
      <view class='img'>
        <image src='https://images.unsplash.com/photo-1551334787-21e6bd3ab135?w=640' bindtap='goHouseimg' data-id='{{0}}'></image>
        <view class='explain'>
          <text class='totle'>{{item.price}}</text>
          <text>{{item.decoration}}</text>
          <text>户型优势</text>
          <view wx:for='{{hoursepointList[index]}}' wx:key='index'>
            <text>{{item}}</text>
          </view>
          <!-- <view>
            <text>黄金地段</text>
          </view>
          <view>
            <text>海景房</text>
          </view> -->
        </view>
      </view>
      <view class='house-info'>
        <view class='top'>
          <view>
            <text>户型</text>
            <text>{{item.houserhold}}</text>
          </view>
          <view>
            <text>建筑面积</text>
            <text>{{item.area}}</text>
          </view>
          <view>
            <text>产品</text>
            <text>{{item.category}}</text>
          </view>
        </view>
        <view class='miaoshu'>户型描述：<text>{{item.houserholdremark}}</text></view>
      </view>
    </view>
  </view>


</view>
