/**app.wxss**/

page {
  width: 100%;
  background-color: #f9fbff;
  overflow-x: hidden;
}

.pack {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.wxexit {
  font-size: 34rpx;
  margin-top: 70rpx;
  color: #20a0ff;
}
/* 首页,详情页,关注页标签样式 */
.all-tag{
  display: inline-block;
  padding: 0 5rpx;
  margin: 0 10rpx 10rpx 0;
  border-radius: 4rpx;
  border: 1rpx solid #979797;
  font-family: 'PingFangTC-Light';
  font-size: 20rpx;
  color: #333;
  line-height: 28rpx;
  letter-spacing: 0.2rpx;
  text-align: center;
}
/* 户型标签 */
.house-tag{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}
.house-type-tag{
  color: #8d91a2;
  font-family: 'PingFangTC-Light';
  font-size: 24rpx;
  padding: 0 10rpx;
  border: 1rpx solid #8d91a2;
  border-radius: 6rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 项目开盘标签 */
.all-sale{
  display: block;
  height: 26rpx;
  background: rgba(32, 160, 255, 0.6);
  font-family: 'PingFangTC';
  font-size: 18rpx;
  color: #fff;
  padding: 0 6rpx 0 4rpx;
  border-radius: 4rpx;
  text-align: center;
}


